        height: 30
        on_release: root.select('tick線')
    SButton:
        text: '1分線'
        size_hint_y: None
        height: 30
        on_release: root.select('1分線')
    SButton:
        text: '5分線'
        size_hint_y: None
        height: 30
        on_release: root.select('5分線')
    SButton:
        text: '10分線'
        size_hint_y: None
        height: 30
        on_release: root.select('10分線')
    SButton:
        text: '15分線'
