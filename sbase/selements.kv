#:kivy 1.10.0

#:import os os
#:import hex kivy.utils.get_color_from_hex
#:set fontName os.environ['WINDIR'] + '\Fonts\mingliu.ttc'

<SLabel>:
    text_size: self.size
    valign: 'middle'
    font_name: fontName

<SCordLabel>:
    font_name: fontName

<SHeadLabel>:
    color: hex("#000000")            
    canvas.before:
        Color:
            rgba: hex("#DDDDDD")
        Rectangle:
            pos: self.pos
            size: self.size
    text_size: self.size
    halign: "center"
    valign: 'middle'
    font_name: fontName

<SContentLabel>:         
    canvas.before:
        Color:
            rgba: hex("#FFFFFF")
        Rectangle:
            pos: self.pos
            size: self.size
    text_size: self.size
    font_name: fontName
    valign: 'middle'

<SInfoButton>:
    background_normal: ""
    background_color: hex("#508CD6")
    color: hex("#FFFFFF")
    halign: "center"
    valign: 'middle'
    background_disabled_normal: ""
    font_name: fontName
    
