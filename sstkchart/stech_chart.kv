#:kivy 1.10.0

#:import hex kivy.utils.get_color_from_hex

<STechChart>:
    head_layout: head_layout.__self__
    body_layout: body_layout.__self__
    idNameDate_id: idNameDate_id
    klineDataType_id: klineDataType_id
    techType_id: techType_id
    previous_id: previous_id
    next_id: next_id
    bigger_id: bigger_id
    smaller_id: smaller_id
    dateTime_id: dateTime_id
    openPrice_id: openPrice_id
    highPrice_id: highPrice_id
    lowPrice_id: lowPrice_id
    closePrice_id: closePrice_id
    upDown_id: upDown_id
    closebtn_id: closebtn_id
    
    size_hint: (1, 1)
    padding: 2
    canvas.before:
        Color:
            rgba: hex("#00142D")
        Rectangle:
            pos: self.pos
            size: self.size
    
    SSysBoxLayout:
        size_hint: (1, .06)
        pos_hint: {'x':0, 'y':0.94}
        orientation: 'horizontal'
        
        SSysBoxLayout:
            size_hint: (.01, 1)
            
        SLabel:
            id: idNameDate_id
            text: ""
            color: hex("#FFFFFF")
            size_hint: (.48, 1)
        
        SSysBoxLayout:
            size_hint: (.01, 1)
            
        SButton:
            id: klineDataType_id
            multiline: False
            text: ""
            size_hint: (.08, .95)
            halign: "center"
            valign: "middle"
        
        SSysBoxLayout:
            size_hint: (.01, 1)
        
        SButton:
            id: techType_id
            multiline: False
            text: ""
            size_hint: (.28, .95)
            halign: "center"
            valign: "middle"
        
        SSysBoxLayout:
            size_hint: (.01, 1)
        
        SButton:
            id: previous_id
            multiline: False
            text: "▲"
            size_hint: (.02, .95)
            halign: "center"
            valign: "middle"
            on_release: root._onChangePage("PrePage")
        
        SSysBoxLayout:
            size_hint: (.01, 1)
            
        SButton:
            id: next_id
            multiline: False
            text: "▼"
            size_hint: (.02, .95)
            halign: "center"
            valign: "middle"
            on_release: root._onChangePage("NextPage")
        
        SSysBoxLayout:
            size_hint: (.01, 1)
        
        SButton:
            id: bigger_id
            multiline: False
            text: "＋"
            size_hint: (.02, .95)
            halign: "center"
            valign: "middle"
            on_release: root._onChangeSize("Bigger")
        
        SSysBoxLayout:
            size_hint: (.01, 1)
        
        SButton:
            id: smaller_id
            multiline: False
            text: "—"
            size_hint: (.02, .95)
            halign: "center"
            valign: "middle"
            on_release: root._onChangeSize("Smaller")
        
        SSysBoxLayout:
            size_hint: (.01, 1)
            
    SSysBoxLayout:
        size_hint: (1, .05)
        pos_hint: {'x':0, 'y':0.89}
        orientation: 'horizontal'
        
        SSysBoxLayout:
            size_hint: (.01, 1)
            
        SLabel:
            id: dateTime_id
            text: ""
            color: hex("#FFFFFF")
            size_hint: (.17, 1)

        SLabel:
            text: " 開:"
            color: hex("#FFFFFF")
            size_hint: (.05, 1)
        
        SLabel:
            id: openPrice_id
            text: ""
            size_hint: (.10, 1)

        SLabel:
            text: " 高:"
            color: hex("#FFFFFF")
            size_hint: (.05, 1)
        
        SLabel:
            id: highPrice_id
            text: ""
            size_hint: (.10, 1)
        
        SLabel:
            text: " 低:"
            color: hex("#FFFFFF")
            size_hint: (.05, 1)
        
        SLabel:
            id: lowPrice_id
            text: ""
            size_hint: (.10, 1)
        
        SLabel:
            text: " 收:"
            color: hex("#FFFFFF")
            size_hint: (.05, 1)
        
        SLabel:
            id: closePrice_id
            text: ""
            size_hint: (.10, 1)

        SLabel:
            text: " 漲跌:"
            color: hex("#FFFFFF")
            size_hint: (.07, 1)
        
        SLabel:
            id: upDown_id
            text: ""
            size_hint: (.10, 1)
        
        SSysBoxLayout:
            size_hint: (.05, 1)
    
    SSysBoxLayout:
        id: head_layout
        size_hint: (1, .05)
        pos_hint: {'x':0, 'y':0.84}
        orientation: 'horizontal'

    FloatLayout:
        id: body_layout
        size_hint: (1, .78)
        pos_hint: {'x':0, 'y':.06}
    
    SSysBoxLayout:
        size_hint: (1, .06)
        pos_hint: {'x':0, 'y':0}
        orientation: 'horizontal'
   
        SButton:
            id: closebtn_id
            text: '關閉'
            size_hint: (1, 1)
            halign: 'center'
            valign: 'middle'