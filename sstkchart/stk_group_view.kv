#:kivy 1.10.0

#:import hex kivy.utils.get_color_from_hex

<StkGroupView>:
    body_layout: body_layout.__self__
    typeName_id: typeName_id
    groupName_id: groupName_id
    changeType_btn_id: changeType_btn_id
    next_btn_id: next_btn_id
    previous_btn_id: previous_btn_id
    closebtn_id: closebtn_id
    
    size_hint: (1, 1)
    padding: 2
    canvas.before:
        Color:
            rgba: hex("#00142D")
        Rectangle:
            pos: self.pos
            size: self.size
    
    SSysBoxLayout:
        id: head_layout
        size_hint: (1, .06)
        pos_hint: {'x':0, 'y':0.94}
        orientation: 'horizontal'
        
        SSysBoxLayout:
            size_hint: (.01, 1)
        
        SLabel:
            id: typeName_id
            text: ""
            color: hex("#FFFFFF")
            size_hint: (.10, 1)

        SSysBoxLayout:
            size_hint: (.01, 1)        

        SLabel:
            id: groupName_id
            text: ""
            color: hex("#FFFFFF")
            size_hint: (.40, 1)
        
        SSysBoxLayout:
            size_hint: (.01, 1)
        
        SButton:
            id: changeType_btn_id
            multiline: False
            text: ""
            size_hint: (.10, .95)
            halign: "center"
            valign: "middle"
            on_release: root._changeType()
                    
        SSysBoxLayout:
            size_hint: (.23, 1)
        
        SButton:
            id: previous_btn_id
            multiline: False
            text: "上一檔"
            size_hint: (.07, .95)
            halign: "center"
            valign: "middle"
            on_release: root._onChangeStock("PreStock")
        
        SSysBoxLayout:
            size_hint: (.01, 1)
            
        SButton:
            id: next_btn_id
            multiline: False
            text: "下一檔"
            size_hint: (.07, .95)
            halign: "center"
            valign: "middle"
            on_release: root._onChangeStock("NextStock")
            
    FloatLayout:
        id: body_layout
        size_hint: (1, .88)
        pos_hint: {'x':0, 'y':.06}
    
    SSysBoxLayout:
        size_hint: (1, .06)
        pos_hint: {'x':0, 'y':0}
        orientation: 'horizontal'
   
        SButton:
            id: closebtn_id
            text: '關閉'
            size_hint: (1, 1)
            halign: 'center'
            valign: 'middle'